{% extends 'base.html.twig' %}


{% block body %}
    <h3>Szukaj</h3>

    <h4>Użytkownicy</h4>
    {% if users is defined %}
        <ul>
            {% for user in users %}
                <li><a href="{{ path('user_show', {userId: user.id}) }}">{{ user.username }}</a></li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Brak wyników</p>
    {% endif %}

    <h4>Faktury</h4>
    {% if invoices is defined %}
        <ul>
            {% for invoice in invoices %}
                <li><a href="{{ path('invoice_show', {invoiceId: invoice.id}) }}">{{ invoice.invoiceNumber }}</a></li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Brak wyników</p>
    {% endif %}
{% endblock %}